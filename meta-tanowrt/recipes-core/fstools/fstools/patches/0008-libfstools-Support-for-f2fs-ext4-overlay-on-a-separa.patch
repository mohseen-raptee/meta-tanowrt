+static const char *blkdev_get_devname(const char *dev)
+{
+	const char *devname;
+
+	if (!dev)
+		return NULL;
+
+	/* Get root device name without "/dev/" */
+	devname = strrchr(dev, '/');
+	if (devname)
+		devname++;
+	else
+		devname = dev;
+
+	return devname;
+}
